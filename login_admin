    private void tbLoginActionPerformed(java.awt.event.ActionEvent evt) {                                        
        ResultSet r=cl.tampilResmi(txtUsername.getText());
        int i=0;
        try {
            while(r.next()){            
                username = r.getString("username");
                password = r.getString("password");
                i++;
            }
        } catch (SQLException ex) {
            System.out.println("Ex "+ex);
        }
        
        if(txtPassword.getText().equals(password)){   
            da = new DataAdmin();
            da.setVisible(true);
            this.setVisible(false);
        }else{
            JOptionPane.showMessageDialog(null,"Username / Password Salah !!!","Peringatan",JOptionPane.WARNING_MESSAGE);
        }
    }                                       

